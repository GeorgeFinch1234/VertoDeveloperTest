@model VertoDeveloperTest.Models.Carousel


<h1>Edit</h1>

<form class="createForm" action="/CMS/editCompleted/@Model.ID" method="post" enctype="multipart/form-data">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" value="@Model.Title" class="FormTitle" />
    </div>
    <div>
        <label for="image">Image</label>
        <input type="file" name="image" accept=".png,.jpg" class="FormImg" />
    </div>

    <div class="createEditBtn">
        <input type="submit" name="submit" aria-label="submit" />
        <a href="/cms/index">Cancel</a>
    </div>

    <p id="errorMessage">@ViewData["ErrorMessage"]</p>


</form>

<div class="slickItem">
    <p class="outPutTitle">@Model.Title </p>
    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Img)" alt="Image" class="OutputImg" />
</div>